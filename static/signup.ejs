<!DOCTYPE html>

<head>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="js/jquery-3.2.1.js"></script>
    <script src="js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="css/stylesheet.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">

    <title>signup</title>

</head>

<body>
    <div class="container">
        <div class="row trans-div header-div">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-1 col-sm-12">
                        <div class="row justify-content-center">
                            <img src="images/logo.png" class="logo">
                        </div>
                    </div>
                    <div class="col-md-11 col-sm-11 justify-content-center">
                        <div class="row justify-content-center header-text-row">
                            <span class="bluetext">create new account</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center align-items-center">
            <div class="col-md-9 col-sm-12 trans-div">
                <div class="row">
                    <div class="col-md-10">
                        <span class="coraltext">please</span>
                        <span class="bluetext">&nbsp enter your details in here</span>
                    </div>
                </div>
                <div>
                    <%= errmsg%>
                </div>
                </br>
                <form action="/signup" method="post">
                    <div class="form-group row">
                        <div class="col-md-3 bluetext">
                            <label for="id" class="bluetext form-label">id:</label>
                        </div>
                        <div class="col-md-9">
                            <input id="id" type="text" name="id" class="form-control" style="<%= valid.id %>" onfocus="removestyle('id')" value="<%= id %>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3 bluetext">
                            <label for="email" class="bluetext form-label">Email:</label>
                        </div>
                        <div class="col-md-9">
                            <input id="email" type="text" name="email" class="form-control" style="<%= valid.email %>" onfocus="removestyle('email')" value="<%= email %>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3 bluetext">
                            <label for="pswd" class="bluetext form-label">password</label>
                        </div>
                        <div class="col-md-9">
                            <input id="pswd" type="password" name="pswd" class="form-control" style="<%= valid.pass %>" onfocus="removestyle('pswd')">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3 bluetext">
                            <label for="confirmPassword" class="bluetext form-label">confirm password</label>
                        </div>
                        <div class="col-md-9">
                            <input id="cnfpswd" type="password" name="cnfpswd" class="form-control" style="<%= valid.conpass %>" onfocus="removestyle('cnfpswd')">
                        </div>
                    </div>
                    <div class="row justify-content-end">
                        <input type="submit" class="btn mybtn" style="background-color: #89b613; margin-right: 15px;" value="NEXT">
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

<script>
    const removestyle = id => {
	document.getElementById(id).style = '';
}
</script>

</html>
